{
    "version": "138.0.7204.303",
    "description": "Chromium fork for Windows named after radioactive element No. 90; Windows builds of https://github.com/Alex313031/Thorium",
    "homepage": "https://thorium.rocks/",
    "license": "BSD-3-Clause",
    "notes": [
        "This build of Thorium requires CPU to support AVX2. If not, try to install 'thorium' instead.",
        "Be aware that '--disable-encryption --disable-machine-id' was appended to the batch file to make Thorium fully portable.",
        "Take a look at READNE.txt for more information."
    ],
    "architecture": {
        "64bit": {
            "url": "https://github.com/Alex313031/Thorium-Win/releases/download/M138.0.7204.303/Thorium_AVX2_138.0.7204.303.zip",
            "hash": "352e8dc53105cb773946c58417bd4a193b2f789a0ade4ff8093e82f97ca3acf0"
        }
    },
    "bin": [
        [
            "bin\\thorium.exe",
            "thorium",
            "--user-data-dir=\"$dir\\USER_DATA\" --allow-outdated-plugins --disable-logging --disable-breakpad --disable-encryption --disable-machine-id"
        ]
    ],
    "shortcuts": [
        [
            "bin\\thorium.exe",
            "Thorium",
            "--user-data-dir=\"$dir\\USER_DATA\" --allow-outdated-plugins --disable-logging --disable-breakpad --disable-encryption --disable-machine-id"
        ]
    ],
    "post_install": [
        "if (!(Test-Path \"$dir\\USER_DATA\\*\") -and (Test-Path \"$env:LocalAppData\\Thorium\\User Data\")) {",
        "    info '[Portable Mode]: Copying user data...'",
        "    Copy-Item \"$env:LocalAppData\\Thorium\\User Data\\*\" \"$dir\\USER_DATA\" -Recurse",
        "}"
    ],
    "env_set": {
        "CHROME_EXECUTABLE": "$dir\\bin\\thorium.exe"
    },
    "persist": "USER_DATA",
    "checkver": {
        "url": "https://api.github.com/repos/Alex313031/Thorium-Win/releases",
        "jsonpath": "$..tag_name",
        "regex": "M([\\d.-]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/Alex313031/Thorium-Win/releases/download/M$version/Thorium_AVX2_$version.zip"
            }
        }
    }
}
